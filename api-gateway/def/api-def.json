        "port": "2998",
        "redirects": 
            [
                {
                    "from": "/signin",
                    "to": "/api/v1/users/signin",
                    "method": "post"
                },
                {
                    "from": "/login",
                    "to": "/api/v1/users/login",
                    "method": "post"
                }
            ]
    },
    {
        "service": "/movies",
        "host": "http://localhost",
        "port": "2999",
        "redirects": 
            [
                {
                    "from": "/:title",
                    "to": "/api/v1/movies/",
                    "method": "get"
                },
                {
                    "from": "/suggestions/:text",
                    "to": "/api/v1/movies/suggestions",
                    "method": "get"
                },
                {
                    "from": "/imdbId/:imdbId",
                    "to": "/api/v1/movies/imdbId/",
                    "method": "get"
                },
                {
                    "from": "/add",
                    "to": "/api/v1/movies/add",
                    "method": "post"
                }
            ]
    },
